{{define "nodes"}}
<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="refresh" content="8" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <script
        type="text/javascript"
        src="https://unpkg.com/vis-network/standalone/umd/vis-network.min.js"
      ></script>
      <style type="text/css">
        #mynetwork {
          width: 600px;
          height: 400px;
          border: 1px solid lightgray;
        }
    body {
      font-family: 'Avenir', Helvetica, Arial, sans-serif;
    }
  </style>

  <title>MPC Visualize App 1</title>
</head>

<body>
<div class="container mt-4">
<h1>Node Dashboard</h1>
  <div class="d-flex justify-content-center">
      <div id="mynetwork"></div>
        <script type="text/javascript"src="/visjs/vis-mpc.js"> </script>
  </div>
  <div class="row mt-4">

    {{range $id, $node := .BodyData.Nodes}}
    <div class="col-sm">
    <div class="text-center">
      <figure class="figure">
        <img src="/worker.png" class="figure-img img-fluid rounded" alt="Worker">
      </figure>
    </div>

    <h5 class="text-center">Node {{$node.ID}}</h5>
    <h5 class="text-center"><em>{{$node.Name}}</em></h5>

    <hr/>
    <h4 class="text-center">Pending Jobs</h4>

{{if $node.PendingJobs}}

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Job ID</th>
          <th scope="col">Type</th>
        </tr>
      </thead>
      <tbody>
      {{range $innerId, $job := $node.PendingJobs}}
        <tr>
          <th scope="row">{{$job.ID}} <span id="badge{{$id}}{{$innerId}}" class="badge bg-success"></span></th>
          <td>{{$job.Type}}</td>
        </tr>
          <script>
          JobID = {{$job.ID}};
          subID = JobID.substring(4);
          if (subID == "{{$node.ID}}") {
          document.getElementById("badge{{$id}}{{$innerId}}").innerHTML = "Originator"; 
          } 
          </script>
        {{end}}
      </tbody>
    </table>

{{else}} 
<div class="alert alert-warning" role="alert">
  No pending MPC jobs
</div>
{{end}}

    <hr/>
    <h4 class="text-center">Done Jobs</h4>

{{if $node.DoneJobs}}

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Job ID</th>
          <th scope="col">Type</th>
        </tr>
      </thead>
      <tbody>
      {{range $id, $job := $node.DoneJobs}}
        <tr>
          <th scope="row">{{$job.ID}}</th>
          <td>{{$job.Type}}</td>
        </tr>
        {{end}}
      </tbody>
    </table>

{{else}}
<div class="alert alert-warning" role="alert">
  No finished MPC jobs yet
</div>
{{end}}
    </div>

    {{end}}
    

  </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
    crossorigin="anonymous"></script>

</body>

</html>
{{end}}